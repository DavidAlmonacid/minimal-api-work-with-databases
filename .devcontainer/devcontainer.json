// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:dev-8.0",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [3000, 5100],
	// "portsAttributes": {
	//		"5001": {
	//			"protocol": "https"
	//		}
	// }
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "dotnet tool install -g dotnet-ef && dotnet tool install csharpier && dotnet dev-certs https",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		},
		"ghcr.io/jckimble/devcontainer-features/ngrok": {
			"version": "stable"
		}
	},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot",
				"ms-dotnettools.csdevkit",
				"csharpier.csharpier-vscode",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"bradlc.vscode-tailwindcss",
				"postman.postman-for-vscode",
				"qwtel.sqlite-viewer"
			],
			"settings": {
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"[csharp]": {
					"editor.tabSize": 4,
					"editor.wordWrapColumn": 100,
					"editor.rulers": [100],
					"editor.defaultFormatter": "csharpier.csharpier-vscode"
				}
			}
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
