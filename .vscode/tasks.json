{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start backend server",
      "type": "shell",
      "command": "cd PizzaStore && dotnet watch",
      "icon": {
        "id": "rocket",
        "color": "terminal.ansiMagenta"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Install client dependencies",
      "type": "npm",
      "script": "install",
      "path": "PizzaClient",
      "dependsOrder": "parallel",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Start client dev server",
      "type": "npm",
      "script": "dev",
      "path": "PizzaClient",
      "dependsOn": ["Install client dependencies"],
      "dependsOrder": "sequence",
      "icon": {
        "id": "target",
        "color": "terminal.ansiYellow"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
